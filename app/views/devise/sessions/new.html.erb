<div class="hp-bg-container">
  <%= image_tag "logo-blanc-png.png", class: "hp-logo" %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs log-in-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: "Email",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: "Mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <div class="devise--remember-me">
        <%= f.input :remember_me, label: "Rester connectÃ©", as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions devise--button-primary-ici">
      <%= f.button :submit, "Connexion" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
